<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
        Selezioni
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne">
      <div class="accordion-body">
        <form method="get" action="/as400/primaa" class="row g-3" name="formSelezione" id="formSelezione">
          <div class="col-md-4">
            <label for="annoreg" class="form-label">Anno Reg.</label>
            <input type="text" class="form-control" name="annoreg" id="annoreg">
          </div>
          <div class="col-md-4">
            <label for="numeroReg" class="form-label">Numero Reg.</label>
            <input type="text" class="form-control" name="numeroReg" id="numeroReg">
          </div>
          <div class="col-md-4">
            <label for="deroga" class="form-label">Deroga</label>
            <input type="text" class="form-control" name="deroga" id="deroga">
          </div>
          <div class="col-md-3">
            <label for="tipo" class="form-label">Tipo</label>
            <select class="form-select" id="tipo" name="tipo">
              <option selected value="">TUTTI </option>
              <option>S</option>
              <option>G</option>
              <option>C</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="numerobolla" class="form-label">Numero Bolla</label>
            <input type="text" class="form-control" name="numerobolla" id="numerobolla">
          </div>
          <div class="col-md-3">
            <label for="tipologiaBolla" class="form-label">Tipologia Bolla</label>
            <input type="text" class="form-control" name="tipologiaBolla" id="tipologiaBolla">
          </div>
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" name="annullato" id="annullato">
              <label class="form-check-label" for="annullato">
                Annullata
              </label>
            </div>
          </div>
          <div class="col-12">
            <!--<button class="btn btn-primary" type="submit">Conferma</button>-->
            <button type="submit" class="btn btn-primary" id="btnconferma" name="btnconferma" title="SELEZIONI">
              Conferma
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

