<h1>LISTA TODOS</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <div class="col">
      <div class="card text-bg-light">
        <div class="card-header">
          <h5>INSERIMENTO</h5>
        </div>
        <div class="card-body">
          <!--<h5 class="card-title">{{this.nometodo}}</h5>-->
          <p class="card-text limited-text">Inserisci un nuovo ToDo</p>
          <a href="/todo/newtodo" class="btn btn-primary ">Go!</a>
        </div>
      </div>
    </div>
  {{#each todos}}
    <div class="col">
      <div class="card text-bg-light">
        <div class="card-header">
          <h5>{{this.nometodo}}</h5>
        </div>
        <div class="card-body">
          <!--<h5 class="card-title">{{this.nometodo}}</h5>-->
          <p class="card-text limited-text">{{this.descrizionetodo}}</p>
          <a href="/todo/{{this.id}}/visualizza" class="btn btn-primary ">Visualizza</a>
          <a href="/todo/{{this.id}}/edit" class="btn btn-success" title="UPDATE">
            <i class="fa fa-pen-alt"></i>
          </a>
          <form method="post" action="/todo/{{this.id}}" name="form{{this.id}}" style="display: inline">
              <input type="hidden" name="_method" value="DELETE">
              <button type="button" onclick="return showConfirmMsg('Delete \'{{this.nometodo}}\'', 'Sei sicuro di eliminare \'{{this.descrizionetodo}}\' ?', 'form{{this.id}}')" class="btn btn-danger" title="DELETE">
                  <i class="fa fa-trash-o"></i>
              </button>
          </form>
        </div>
        <div class="card-footer">
          <small class="text-muted">
            {{completed this.completato}}
          </small>
        </div>
      </div>
    </div>
  {{/each}}
</div>